<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/goMathSettingsButton"
        android:layout_width="194dp"
        android:layout_height="42dp"
        android:text="Text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.114" />

    <Button
        android:id="@+id/goAppListButton"
        android:layout_width="289dp"
        android:layout_height="65dp"
        android:background="@null"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:text="AppList"
        app:layout_constraintBottom_toTopOf="@+id/goBackgroundWorkingButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goMathSettingsButton"
        app:layout_constraintVertical_bias="0.487" />

    <Button
        android:id="@+id/goBackgroundWorkingButton"
        android:layout_width="181dp"
        android:layout_height="78dp"
        android:layout_marginBottom="108dp"
        android:background="@null"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:text="Background"
        app:layout_constraintBottom_toTopOf="@+id/completeSettingsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/completeSettingsButton"
        android:layout_width="129dp"
        android:layout_height="60dp"
        android:layout_marginBottom="80dp"
        android:background="@null"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:text="GO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>